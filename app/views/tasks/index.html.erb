<html>
  <head>

    <title>Tasks</title>

    <%= stylesheet_link_tag "tasks", media: "all", "data-turbolinks-track" => "reload" %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="materialize.min.css"  media="screen,projection"/>

  </head>
  <body>
    <div class="container" id="index-title">
      <% if @tasks %>
      <div class="row" id="all-tasks">
      <div class="col"></div>
      <div class="col">
        <% @tasks.each do |t| %>
            <div class="card large light-blue" style="height: 225px; width: 500px;" id="single-task">
              <div class="card-content white-text">
                <span class="card-title" style="font-size: 25px" id="user"><i><b><%= t.author %></b></i></span>
                <p id="subject" style="font-size: medium"><%= t.subject %><p/>
                <p id="category" style="font-size: medium"><%= t.category %><p/>
                <p id="points" style="font-size: medium"> Points: <%= t.points %><p/>
                <p id="description" style="font-size: medium;"><%= t.description %><p/>
                <div class="right-align"><img src="https://www.google.com/search?q=green+wave+helmet&safe=off&rlz=1C5CHFA_enUS705US705&source=lnms&tbm=isch&sa=X&ved=0ahUKEwjcyJ3mkqHfAhXuna0KHW7bAm4Q_AUIDygC&biw=1280&bih=690&dpr=2#imgrc=ocrgOtaNxelTlM:"></div>
                <!--<p style="font-size: medium"> Image: <%= image_tag(t.image_url(:thumb).to_s) %></p>-->
                <div class="card-action" id="view-task"><button class = "btn waves-effect waves-light white"><%= link_to('See More', task_path(t)) %></button>

              </div>
              </div>
            </div>
        <% end %>
      <% end %>
      </div>
    <div class="col"></div>
      </div>
    </div>
    <div class="container">
      <div col="col"></div>
      <div class="col"></div>
      <div class="col"> <footer class="fixed-action-btn" id="bottom-left"><a href="/tasks/new" class="btn-floating btn-large waves-effect waves light-blue darken-4"><i class="material-icons">add</i></a></footer></div></div>

      <script type="text/css" src="../../../public/materialize.min.js"></script>

  </body>
</html>