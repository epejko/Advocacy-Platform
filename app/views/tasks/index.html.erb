<html>
  <head>
    <title>Tasks</title>
  </head>
  <body>
    <div class="main">
      <div class="container">
        <h1>Index</h1>
        <p>This is where all tasks are listed</p>
    
        <table>
          <% @tasks.each do |t| %>
          <tr>
            <td>
            <p><%= t.subject %></p>
          </td>
          <td>
            <p><%= t.category %></p>
          </td>
          <td>
            <p><%= t.points %></p>
          </td>
          <td>
            <p><%= t.author %></p>
          </td>
          <td>
            <%= link_to 'View', task_path(t) %>
          </td>
          
        </tr>
      <% end %>
      </table>
    
    
      <h1><a href="tasks/new">Add a new task</a></h1>
      </div>
    </div>
  </body>
</html>