<html>
    <head>
      <%= stylesheet_link_tag "tasks", media: "all", "data-turbolinks-track" => "reload" %>
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <link type="text/css" rel="stylesheet" href="materialize.min.css"  media="screen,projection"/>


      <title>
           Submit a Report
        </title>
    </head>
    <body>
        <h1>Submit a Report</h1>
        <%= form_for Task.new do |t| %>
        
            <%= t.hidden_field :author, value: current_user.username %>
            <%= t.hidden_field :user_id, value: current_user.id %>
            
            <div class="input-field col s6">
              <input placeholder="Subject" id="subject" type="text">
              <%= t.text_field :subject %>
            </div>
            </div>
            <%= t.label :category, "Category" %>
            <%= t.select :category, Options['Categories'] %>
            
            <%= t.label :points, "Points" %>
            <%= t.select :points, ((1..10).map {|i| [i,i] }) %>
            
            <%= t.label :description, "Description" %>
            <%= t.text_field :description %>
            
            <%= t.label :image %><br>
            <%= t.file_field :image %>
            
            <%= t.submit "Submit Task" %>
        <% end %>
        <script type="text/css" src="../../../public/materialize.min.js"></script>
    </body>


</html>