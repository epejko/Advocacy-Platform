<html>
<head>
    <title>Edit</title>
</head>
<body>
    
<% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

    <h1>Hi, <%= @user.first_name %></h1>
    <p>To finish signing up, choose a username</p>
    <%= form_for @user do |u| %>
        <%= u.hidden_field :pointtotal, value: 0 %>
    
        <%= u.label :username %>
        <%= u.text_field :username %>
        
        <%= u.submit "Submit" %>
    <% end %>
</body>
</html>