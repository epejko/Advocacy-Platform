<html>
<head>
    <title>Profile</title>
    
    <%= stylesheet_link_tag "tasks", media: "all", "data-turbolinks-track" => "reload" %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
        
    <% if current_user %>
    
        <div class="container" id="user-title">
            <h2><%= current_user.first_name%> <%= current_user.last_name%></h2>
        </div>
        
        <div></div>
        
        <div class="container" id="user-table">
            <div class="container" id="user-one">
                <div class="container" id="user">
                    <h3> <%= current_user.username %></h3>
                </div>
                <h3 id="email"> Points: <%= current_user.email %></h3>
                <h3 id="points"> Points: <%= current_user.pointtotal %></h3>
            </div>
        </div>
        
        <div></div>
        
        <div class = "container" id="task-table">
            <div class = "container" id="user">
                <h3>My Tasks:</h3>
            </div>
            <% @tasks.each do |t| %>
                <h3 id="subject"><%= t.subject %></h3>
            <% end %>
        </div>
    <% end %>
</body>
</html>