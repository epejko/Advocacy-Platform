<html>
<head>
    <title>Profile</title>
    
    <%= stylesheet_link_tag "tasks", media: "all", "data-turbolinks-track" => "reload" %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
        
    <% if current_user %>
    
        <div class="container" id="user-title">
            <h3><%= current_user.first_name%> <%= current_user.last_name%></h3>
        </div>
        
        <% current_user.attributes.each do |key, value| %>
            <p><%= key %>: <%= value %></p> <br>
        <% end %>
        
        <div class="container" id="user-table">
            <div class="container" id="user-one">
                <div class="container" id="user">
                    <h3> <%= current_user.username %></h3>
                </div>
                <h3 id="email"> Points: <%= current_user.email %></h3>
                <h3 id="points"> Points: <%= current_user.pointtotal %></h3>
            </div>
        </div>
        
        <div>
            <p>My Tasks:</p>
            <% @tasks.each do |t| %>
                <p><%= t.subject %></p>
            <% end %>
        </div>
    <% end %>
</body>
</html>